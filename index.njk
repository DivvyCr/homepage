	<main>
	    <div id="shifty" class="grid">
		<section class="left">
		    {% include "featured.njk"  %}
		</section>
		<section class="middle">
		    {% include "main.njk" %}
		</section>
		<section class="right">
		    <div class="photo">
			<div style="position: relative; width: 100%; height: 100%">
			    <img class="photo-pic" src="/assets/images/696f1e373f15462ea.jpeg">
			    <img class="photo-pic" width="1066px" height="560px" src="/assets/images/Photo.png">
			</div>
		    </div>
