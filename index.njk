	<script>
	 document.addEventListener('keydown', listener);

	 function listener(e) {
	     if (e.keyCode === 32) {
		 shift();
	     }
	 }

	 function shift() {
	     document.getElementById("shifty").classList.toggle("move");
	 }
	</script>
